 "doctype": "Print Format",
 "font_size": 14,
 "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n  <title>Tax Invoice</title>\n\n  <style>\n    * { box-sizing: border-box; }\n    body { font-family: Arial, sans-serif; font-size: 11px; margin: 0; padding: 8px; color: #000; }\n\n    /* ===== Title ===== */\n    .title-wrap { position: relative; text-align: center; margin-bottom: 4px; }\n    .title-wrap h1 { font-size: 15px; margin: 0; font-weight: 700; }\n    .title-wrap .orig { position: absolute; right: 0; top: 0; font-size: 9.5px; font-style: italic; }\n\n    table { width: 100%; border-collapse: collapse; table-layout: fixed; }\n\n    .box { border: 1px solid #000; }\n    .box td, .box th { border: 1px solid #000; padding: 6px; vertical-align: top; }\n\n    .col-left { width: 50%; }\n    .col-mid  { width: 50%; }\n\n    .logo {\n      width: 60px;\n      height: 60px;\n      object-fit: contain;\n      float: left;\n      margin-right: 8px;\n    }\n\n    .addr { line-height: 1.25; }\n\n    .meta td {\n      border: none !important;\n      padding: 2px 0 !important;\n      line-height: 1.25;\n      font-size: 11px;\n    }\n\n    .lbl { font-weight: 700; }\n\n    .buyer-title { font-weight: 700; margin-bottom: 4px; }\n    .buyer-block { line-height: 1.25; min-height: 120px; }\n\n    /* ===== Items ===== */\n    .items th, .items td { border: 1px solid #000; padding: 5px; font-size: 10.8px; }\n    .items th { text-align: center; font-weight: 700; }\n\n    .items th:nth-child(1), .items td:nth-child(1) { width: 5%; text-align: center; }\n    .items th:nth-child(2), .items td:nth-child(2) { width: 36%; }\n    .items th:nth-child(3), .items td:nth-child(3) { width: 10%; text-align: center; }\n    .items th:nth-child(4), .items td:nth-child(4) { width: 7%; text-align: center; }\n    .items th:nth-child(5), .items td:nth-child(5) { width: 10%; text-align: right; }\n    .items th:nth-child(6), .items td:nth-child(6) { width: 10%; text-align: right; }\n    .items th:nth-child(7), .items td:nth-child(7) { width: 6%; text-align: center; }\n    .items th:nth-child(8), .items td:nth-child(8) { width: 6%; text-align: center; }\n    .items th:nth-child(9), .items td:nth-child(9) { width: 10%; text-align: right; font-weight: 700; }\n\n    /* ===== Bank + Sign ===== */\n    .bank-sign { margin-top: 6px; }\n    .bank-title, .decl-title { font-weight: 700; margin-bottom: 2px; }\n    .bank-grid td { border: none !important; padding: 1px 0 !important; }\n    .bank-grid .k { width: 35%; font-weight: 700; }\n    .bank-grid .v { width: 65%; }\n\n    .sign-wrap { height: 110px; position: relative; }\n    .sign-eoe { font-size: 10px; font-style: italic; text-align: right; }\n    .sign-for { text-align: right; font-weight: 700; margin-top: 4px; }\n    .sign-bottom { position: absolute; right: 6px; bottom: 6px; font-weight: 700; }\n\n    .printed { font-size: 10px; font-weight: 700; margin-top: 6px; }\n\n    @media print {\n      body { padding: 0; }\n      tr { page-break-inside: avoid; }\n    }\n  </style>\n</head>\n\n<body>\n\n{% set company_doc = frappe.get_doc(\"Company\", doc.company) %}\n{% set bank_acc_name = company_doc.default_bank_account %}\n{% set bank_acc = frappe.db.get_value(\n  \"Bank Account\",\n  bank_acc_name,\n  [\"bank\", \"bank_account_no\", \"branch\", \"ifsc\"],\n  as_dict=1\n) if bank_acc_name else None %}\n\n<div class=\"title-wrap\">\n  <h1>Tax Invoice</h1>\n  <div class=\"orig\">(ORIGINAL FOR RECIPIENT)</div>\n</div>\n\n<table class=\"box\">\n  <tr>\n    <td class=\"col-left\">\n      {% if company_doc.logo_for_printing %}\n        <img class=\"logo\" src=\"{{ company_doc.logo_for_printing | abs_url }}\">\n      {% endif %}\n\n      <div class=\"addr\">\n        {{ doc.company_address_display or \"\" }}<br>\n        {% if doc.company_phone_no %}Phone: {{ doc.company_phone_no }}<br>{% endif %}\n        {% if doc.company_email %}Email: {{ doc.company_email }}<br>{% endif %}\n        {% if company_doc.pan %}PAN: {{ company_doc.pan }}<br>{% endif %}\n        {% if company_doc.gstin %}GSTIN/UIN: {{ company_doc.gstin }}{% endif %}\n      </div>\n\n      <hr>\n      <div class=\"buyer-title\">Buyer (Bill to)</div>\n      <div class=\"buyer-block\">{{ doc.address_display or \"\" }}</div>\n    </td>\n\n    <td class=\"col-mid\">\n      <table class=\"meta\">\n        <tr><td><span class=\"lbl\">Invoice No.</span> : {{ doc.name }}</td></tr>\n        <tr><td><span class=\"lbl\">Dated</span> : {{ frappe.utils.formatdate(doc.posting_date, \"dd-MMM-yy\") }}</td></tr>\n        <tr><td><span class=\"lbl\">Delivery Note</span> : {{ doc.delivery_note or \"\" }}</td></tr>\n        <tr><td><span class=\"lbl\">Vehicle No.</span> : {{ doc.vehicle_no or \"\" }}</td></tr>\n        <tr><td><span class=\"lbl\">Transporter</span> : {{ doc.transporter or \"\" }}</td></tr>\n        <tr><td><span class=\"lbl\">Buyer Ref./Order No.</span> : {{ doc.po_no or \"\" }}</td></tr>\n      </table>\n    </td>\n  </tr>\n</table>\n\n<!-- ITEMS -->\n<table class=\"items\">\n  <tr>\n    <th>Sl<br>No.</th>\n    <th>Description of Goods</th>\n    <th>HSN/SAC</th>\n    <th>GST<br>Rate</th>\n    <th>Qty</th>\n    <th>Rate</th>\n    <th>Per</th>\n    <th>Disc%</th>\n    <th>Amount</th>\n  </tr>\n\n  {% for row in doc.items %}\n  {% set gst_rate = (row.cgst_rate or 0) + (row.sgst_rate or 0) + (row.igst_rate or 0) %}\n  <tr>\n    <td>{{ loop.index }}</td>\n    <td><b>{{ row.item_name }}</b><br>{{ row.description or \"\" }}</td>\n    <td>{{ row.gst_hsn_code or \"\" }}</td>\n    <td>{{ gst_rate }}%</td>\n    <td>{{ row.qty }} {{ row.uom }}</td>\n    <td>{{ row.get_formatted(\"rate\", doc) }}</td>\n    <td>{{ row.uom }}</td>\n    <td>{{ row.discount_percentage or \"\" }}</td>\n    <td>{{ row.get_formatted(\"amount\", doc) }}</td>\n  </tr>\n  {% endfor %}\n</table>\n\n<!-- BANK + DECLARATION + SIGN -->\n<table class=\"box bank-sign\">\n  <tr>\n    <td style=\"width:50%;\">\n      <div class=\"bank-title\">Company\u2019s Bank Details</div>\n      <table class=\"bank-grid\">\n        <tr><td class=\"k\">Bank Name</td><td class=\"v\">: {{ bank_acc.bank if bank_acc else \"\" }}</td></tr>\n        <tr><td class=\"k\">A/c No.</td><td class=\"v\">: {{ bank_acc.bank_account_no if bank_acc else \"\" }}</td></tr>\n        <tr><td class=\"k\">Branch & IFSC</td><td class=\"v\">: {{ bank_acc.branch if bank_acc else \"\" }} {{ bank_acc.ifsc if bank_acc else \"\" }}</td></tr>\n      </table>\n\n      <div class=\"decl-title\">Declaration</div>\n      <div>\n        We declare that this invoice shows the actual price of the goods described and that all particulars are true and correct.\n      </div>\n    </td>\n\n    <td style=\"width:50%;\">\n      <div class=\"sign-wrap\">\n        <div class=\"sign-eoe\">E. &amp; O.E</div>\n        <div class=\"sign-for\">For {{ doc.company }}</div>\n        <div class=\"sign-bottom\">Authorised Signatory</div>\n      </div>\n    </td>\n  </tr>\n</table>\n\n<p class=\"printed\">\n  Printed By: {{ frappe.session.user }} on {{ frappe.utils.format_datetime(frappe.utils.now(), \"dd-MMM-yy HH:mm:ss\") }}\n</p>\n\n</body>\n</html>\n",
